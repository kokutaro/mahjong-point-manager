# プロダクション環境用の環境変数設定

# データベース
POSTGRES_DB=mahjong_db
POSTGRES_USER=mahjong_user
POSTGRES_PASSWORD=your_secure_password_here

# アプリケーション
NODE_ENV=production
PORT=3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost

# Docker Compose設定
APP_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# WebSocket設定
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=3000

# データベース URL (自動生成されるため通常は設定不要)
# DATABASE_URL=postgresql://mahjong_user:password@postgres:5432/mahjong_db